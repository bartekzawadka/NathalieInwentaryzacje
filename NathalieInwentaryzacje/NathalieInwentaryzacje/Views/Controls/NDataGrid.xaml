<DataGrid x:Class="NathalieInwentaryzacje.Views.Controls.NDataGrid"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:cal="http://www.caliburnproject.org"
             xmlns:local="clr-namespace:NathalieInwentaryzacje.Views.Controls"
             mc:Ignorable="d" x:Name="DataGrid" Style="{StaticResource MetroDataGrid}">

    <DataGrid.RowStyle>
        <Style TargetType="DataGridRow" BasedOn="{StaticResource MetroDataGridRow}">
            <Setter Property="cal:Message.Attach" Value="[MouseDoubleClick] = [Action SelectedContextItemDoubleClick($dataContext)]"></Setter>
        </Style>
    </DataGrid.RowStyle>

</DataGrid>



