<controls:DropDownButton x:Class="NathalieInwentaryzacje.Views.Controls.NDropDownButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NathalieInwentaryzacje.Views.Controls"
             xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
             xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
             mc:Ignorable="d" 
             Margin="5" Name="CurrentButton">
    <controls:DropDownButton.Content>
        <StackPanel Orientation="{Binding ElementName=CurrentButton, Path=ContentOrientation, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Center" HorizontalAlignment="Center">
                <iconPacks:PackIconModern Name="IconControl" Kind="{Binding ElementName=CurrentButton, Path=ModernIcon, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,5,0"></iconPacks:PackIconModern>
                <TextBlock Name="TextBlock" Text="{Binding ElementName=CurrentButton, Path=Text, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource ToUpperConverter}}"></TextBlock>
            </StackPanel>
    </controls:DropDownButton.Content>
</controls:DropDownButton>



